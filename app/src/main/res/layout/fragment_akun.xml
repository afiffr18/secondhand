<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="19dp"
    tools:context=".ui.uiakun.AkunFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iv_picture"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:elevation="0dp"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/edit_iv_picture"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="#E2D4F0"
            android:src="@drawable/ic_outline_camera_alt_24"
            android:elevation="0dp"
            android:scaleType="centerCrop" />

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/iv_edit_akun"
        app:layout_constraintTop_toBottomOf="@id/iv_picture"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_ubah_akun"
        android:text="Ubah Akun"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/iv_edit_akun"
        app:layout_constraintBottom_toBottomOf="@id/iv_edit_akun"
        app:layout_constraintStart_toEndOf="@id/iv_edit_akun"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ubah_akun"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"/>




</androidx.constraintlayout.widget.ConstraintLayout>