<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="19dp"
    tools:context=".ui.uiakun.AkunFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Akun Saya"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iv_picture"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="30dp"
        android:clickable="true"
        android:elevation="0dp"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:backgroundTint="@color/darkblue02"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_page">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/edit_iv_picture"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:elevation="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_fi_camera"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/iv_edit_akun"
        app:layout_constraintTop_toBottomOf="@id/iv_picture"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_outline_edit_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_ubah_akun"
        android:text="Ubah Akun"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/iv_edit_akun"
        app:layout_constraintBottom_toBottomOf="@id/iv_edit_akun"
        app:layout_constraintStart_toEndOf="@id/iv_edit_akun"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ubah_akun"
        android:layout_marginTop="18dp"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/iv_pengaturan_akun"
        app:layout_constraintTop_toBottomOf="@id/iv_edit_akun"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_outline_settings_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_pengaturan_akun"
        android:text="Pengaturan Akun"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/iv_pengaturan_akun"
        app:layout_constraintBottom_toBottomOf="@id/iv_pengaturan_akun"
        app:layout_constraintStart_toEndOf="@id/iv_pengaturan_akun"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pengaturan_akun"
        android:layout_marginTop="18dp"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/iv_keluar_akun"
        app:layout_constraintTop_toBottomOf="@id/iv_pengaturan_akun"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_baseline_exit_to_app_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_kelaur_akun"
        android:text="Keluar"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/iv_keluar_akun"
        app:layout_constraintBottom_toBottomOf="@id/iv_keluar_akun"
        app:layout_constraintStart_toEndOf="@id/iv_keluar_akun"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_kelaur_akun"
        android:layout_marginTop="18dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:text="Version 1.0.0"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>